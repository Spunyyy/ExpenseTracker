<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ExpenseTracker.MAUI.Views.Controls.ExpenseView">
    <Border Padding="5"
            Margin="5"
            Stroke="Silver">
        <toolkit:Expander>
            <toolkit:Expander.Header>
                <Grid ColumnDefinitions="*,*,*"
                      RowDefinitions="*,*">
                    <Label Text="Amount"
                           Grid.Row="0"
                           Grid.Column="0"/>
                    <Label Text="{Binding Amount}"
                           Grid.Row="1"
                           Grid.Column="0"/>

                    <Label Text="Date"
                           Grid.Row="0"
                           Grid.Column="1"/>
                    <Label Text="{Binding Date, StringFormat='{0:d.M.yyyy}'}"
                           Grid.Row="1"
                           Grid.Column="1"/>

                    <Label Text="Category"
                           Grid.Row="0"
                           Grid.Column="2"/>
                    <Label Text="{Binding Category}"
                           Grid.Row="1"
                           Grid.Column="2"/>
                </Grid>
            </toolkit:Expander.Header>

            <toolkit:Expander.Content>
                <Grid RowDefinitions="*,*,*"
                      ColumnDefinitions="*,*">
                    <Label Text="Note"
                           Grid.Row="0"/>
                    <Label Text="{Binding Note, TargetNullValue=' '}"
                           Grid.Row="1"/>
                    
                    <Button x:Name="editButton"
                            Text="Edit"
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="5"
                            BackgroundColor="Blue"
                            Clicked="editButton_Clicked"/>
                    <Button x:Name="deleteButton"
                            Text="Delete"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            BackgroundColor="Red"
                            Clicked="deleteButton_Clicked"/>
                </Grid>
            </toolkit:Expander.Content>
        </toolkit:Expander>
    </Border>
</ContentView>
