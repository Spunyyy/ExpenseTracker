<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseTracker.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpenseTracker.MAUI"
    xmlns:pages="clr-namespace:ExpenseTracker.MAUI.Views.Pages"
    Title="ExpenseTracker.MAUI">

    <FlyoutItem Route="MainPage" Title="Main">
        <ShellContent ContentTemplate="{DataTemplate pages:MainPage}"/>
    </FlyoutItem>
    <FlyoutItem Route="AddExpense" Title="Add expense">
        <ShellContent ContentTemplate="{DataTemplate pages:AddExpensePage}"/>
    </FlyoutItem>



    <MenuItem Text="Logout"
              x:Name="logoutButton"
              Clicked="logoutButton_Clicked"/>

</Shell>
